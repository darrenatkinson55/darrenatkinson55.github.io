---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PostHogInit from "../components/PostHogInit.astro";

interface Props {
  title?: string;
}

const { title = "AI Agent Leaderboard | Steel.dev" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, "https://leaderboard.steel.dev");
---

<!doctype html>
<html lang="en" class="w-full h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Compare and evaluate AI agents on Steel.dev's leaderboard"
    />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Compare and evaluate AI agents on Steel.dev's leaderboard"
    />
    <meta name="twitter:image" content="/og-image.png" />
  </head>
  <body class="w-full m-0 p-0 font-mono bg-background text-text max-w-3xl mx-auto">
    <PostHogInit />
    <div class="flex flex-col min-h-screen px-4 py-5 justify-items-start gap-18 md:gap-12">
      <Header />
      <main class="flex-1 py-4 relative flex flex-col items-center justify-start">
        <div
          class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none bg-terminal-grid"
        >
        </div>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
